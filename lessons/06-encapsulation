<?php

// Encapsulation => To enclose within a capsule

class Person
{
    public $name;

    public function __construct($name)
    {
        $this->name = $name;
    }

    private function thingsThatKeepYouUpAtNight()
    {
        return "We are all going to die someday and that is terrifying.";
    }
}

$method = new \ReflectionMethod(Person::class, 'thingsThatKeepYouUpAtNight');
$method->setAccessible(true);

$bob = new Person('Bob');

var_dump($method->invoke($bob));
